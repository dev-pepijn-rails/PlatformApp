<p id="notice"><%= notice %></p>

<div class = "project-title"
  <h1>Projecten</h1>
</div>

<div class="table-head">

  <table>
    <thead>
      <tr>
        <th>Afbeelding</th>
        <th>Project</th>
        <!-- <th>Land</th>
        <th>Plaats</th>
        <th>Adres</th>
         --><th>Doel</th>
        <th>Omschrijving</th>
        <th>Website</th>   
        <!-- <th>Contactpersoon</th>
        <th>Email</th>
        <th>Telefoonnummer</th>
         --><th colspan="3"></th>
      </tr>
    </thead>
</div>

<div clas="table-body">

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <div class="project-image">
          <%= image_tag project.image unless project.image.nil? %>
          </div>
        </td>
        <td><%= project.name %></td>
        <!-- <td><%= project.country %></td>
        <td><%= project.location %></td>
        <td><%= project.address %></td>
         --><td><%= project.goal %></td>
        <td><%= project.description %></td>
        <td> <a href = <%= project.website %> target=_blank >project website</a></td>

        <!-- <td><%= project.contact %></td>
        <td><%= project.email %></td>
        <td><%= project.phonenumber %></td>
         --><td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) if current_user && project.user.id == current_user.id  %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if current_user && project.user.id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Project', new_project_path if current_user %>
