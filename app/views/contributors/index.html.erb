<p><%= link_to "terug naar homepagina", root_path %></p>

<h1>Mensen die een bijdrage willen leveren</h1>

<table>
  <thead>
    <tr>
      <th>Naam</th>
      <th>Land</th>
      <th>Woonplaats</th>
      <th>Korte profielschets</th>
      <th>Wil een bijdrage leveren aan</th>
      <th>Email</th>
      <th>Telefoonnummer</th>
      <th>Afbeelding</th>
      <th>Linkedin profiel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributors.each do |contributor| %>
      <tr>
        <td><%= contributor.name %></td>
        <td><%= contributor.country %></td>
        <td><%= contributor.location %></td>
        <td><%= contributor.personal_description %></td>
        <td><%= contributor.possible_contribution %></td>
        <td><%= contributor.email %></td>
        <td><%= contributor.phonenumber %></td>
        <td><%= contributor.picture %></td>
        <td><a href = <%= contributor.Linkedin_profile %> target=_blank>Linkedin profiel</a></td>
        <td><%= link_to 'Show', contributor %></td>
        <td><%= link_to 'Edit', edit_contributor_path(contributor) %></td>
        <td><%= link_to 'Destroy', contributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

